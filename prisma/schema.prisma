generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url = env("DATABASE_URL")
}
model Budgets{
id       String    @id @default(auto()) @map("_id") @db.ObjectId
month Int
year Int
income Float
userId String?
}
model users{

  email String
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  userName String
picture String
}model Categories{
budgetId String
    id       String    @id @default(auto()) @map("_id") @db.ObjectId
    name String
    amount Float
isRecurring Boolean
}
model Transactions{
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  name String
  amount Float
  date DateTime
  description String
  categoryId String
  

  
}
